<div class="book-card">
  <% if book.image.attached? %>
    <%= link_to image_tag(book.image), book %>
  <% end %>
  <div class="book-card-content">
    <h3><%= link_to book.title, book %></h3>
    <p class="author"><%= book.author %></p>
    <p class="price"><%= number_to_currency(book.price) %></p>
    <%= button_to "Add to Cart", cart_items_path(book_id: book.id), class: 'button' %>
  </div>
</div>


