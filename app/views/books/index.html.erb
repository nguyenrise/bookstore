<h1>Our Books</h1>

<%= form_with(url: books_path, method: :get, local: true) do |form| %>
  <div class="search-bar">
    <%= form.text_field :query, placeholder: "Search by title or author...", value: params[:query] %>
    <%= form.submit "Search" %>
  </div>
<% end %>

<div class="book-grid">
  <%= render @books %>
</div>
